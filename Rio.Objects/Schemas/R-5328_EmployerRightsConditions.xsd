<?xml version="1.0" encoding="utf-8"?>
<xsd:schema targetNamespace="http://ereg.egov.bg/segment/R-5328" xmlns="http://ereg.egov.bg/segment/R-5328" 

	xmlns:bsw="http://ereg.egov.bg/value/R-5318" 
	xmlns:pw="http://ereg.egov.bg/value/R-5320" 
	xmlns:arw="http://ereg.egov.bg/value/R-5322" 
	xmlns:whw="http://ereg.egov.bg/value/R-5324" 
	xmlns:ocw="http://ereg.egov.bg/value/R-5326" 
	
	xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

	<xsd:import namespace="http://ereg.egov.bg/value/R-5318" />
