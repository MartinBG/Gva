		<xsd:sequence>
			<xsd:element name="BodySectorWorker" type="bsw:BodySectorWorker" minOccurs="0" />
			<xsd:element name="PositionWorker" type="pw:PositionWorker" minOccurs="0" />
			<xsd:element name="ActiveRestWorker" type="arw:ActiveRestWorker" minOccurs="0" />
			<xsd:element name="WorkHoursWorker" type="whw:WorkHoursWorker" minOccurs="0" />
			<xsd:element name="OtherConditionsWorker" type="ocw:OtherConditionsWorker" minOccurs="0" />
		</xsd:sequence>
